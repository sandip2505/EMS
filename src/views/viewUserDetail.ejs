<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header.ejs') %>
  <body>
    <div class="container-scroller">
      <%- include('partials/sidebar.ejs') %>
      <div class="container-fluid page-body-wrapper">
        <%- include('partials/navbar.ejs') %>
        <div class="main-panel">
          <div class="content-wrapper">
            <section class="content">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Employee Details</h3>
                    </div>
                    <div class="card-body">
                      <div class="row">
                        <div class="col-sm-6">
                          <div class="card">
                            <div class="card-body">
                              <div class="row">
                              <div class="col-3">
                                <img src="/public/images/<%=data.photo%>" class="rounded-circle" height="120px" width="120px" alt="image">
                              </div>
                              <div class="col-sm-9">
                                <h3 class="card-title"> <%=data.firstname%></h3>
                                <p class="card-title"> <%=data.role_id%></p>
                                <h3 class="card-text">User Name :<%=data.user_name%></h3>
                                <h3 class="card-text">Employee ID :<%=data.emp_code%></h3>
                                <p class="card-title"> Date Of Join : <%=data.doj%></p>
                              </div>
                            </div>
                            </div>
                          </div>
                        </div>
                        <div class="col-sm-6">
                          <div class="card">
                            <div class="card-body">
                              <div class="row">
                                <div class="col-3">
                                  <h4>Phone:</h4>
                                  <h4>Email:</h4>
                                  <h4>Birthday:</h4>
                                  <h4>Address:</h4>
                                  <h4>Gender:</h4>
                                  <h4>Roporting  User:</h4>
                                </div>
                                <div class="col-sm-9">
                                  <h4><%=data.mo_number%></h4>
                                  <h4><%=data.personal_email%></h4>
                                  <h4><%=data.dob%></h4>
                                  <h4><%=data.add_1%>
                                    <%=data.add_2%><%=data.pincode%></h4>
                                  <h4><%=data.gender%></h4>
                                  <h4><%=data.reporting_user_id%></h4>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                </div>
<div class="row">
                <div class="card mt-5 ml-2 col-6">
                  <div class="card-header">
                      <h3 class="card-title">Personal Information</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
                        <div class="card-body">
                          <div class="row">
                            <div class="col-3">
                              <h4>Comapny email:</h4>
                              <h4>Pan No :</h4>
                              <h4>Aadhar No:</h4>
                              <h4>City:</h4>
                              <h4>State:</h4>
                              <h4>Country:</h4>
                            </div>
                            <div class="col-sm-9">
                              <h4><%=data.company_email%></h4>
                              <h4><%=data.pan_number%></h4>
                              <h4><%=data.aadhar_number%></h4>
                              <h4><%=data.city%></h4>
                              <h4><%=data.state%></h4>
                              <h4><%=data.country%></h4>
                            </div>
                          </div>
                        </div>
                    </div>
                  </div>
              </div>
              <div class="card mt-5 ml-5 col-5">
                <div class="card-header">
                    <h3 class="card-title">Bank Information</h3>
                </div>
                <div class="card-body">
                  <div class="row">
                      <div class="card-body">
                        <div class="row">
                          <div class="col-sm-6">
                            <h4>Bank Name:</h4>
                            <h4>Account Number:</h4>
                            <h4>IFSC Code:</h4>
                           
                          </div>
                          <div class="col-sm-6">
                            <h4><%=data.bank_name%></h4>
                            <h4><%=data.bank_account_no%></h4>
                            
                            <h4><%=data.ifsc_code%></h4>
                           
                          </div>
                        </div>
                      </div>
                  </div>
                </div>
            </div>  
          </div>
            </section>
          </div>
          <%- include('partials/footer.ejs') %>
  </body>
</html> 
<script>

  function openModal(modal_id) {
    //$('.confirm-delete').addClass('hide');
    $('#myModal_' + modal_id + '.modal-header, .modal-footer, .modal-body').removeClass('hide');
    $('#myModal_' + modal_id).modal('show');
  }

</script>

