<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("partials/head.ejs") %>
        <%- include ("partials/head-bottom-link.ejs") %>
            <link rel="stylesheet" href="css/aman.css">
</head>
<!-- <link rel="stylesheet" href="styles.css"> -->

<script src="https://code.jquery.com/jquery-3.6.1.min.js" ></script>


<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <%- include ("partials/menu-list.ejs") %>
            <div class="pcoded-main-container">
                <div class="content-wrapper">
                    <div class="content-header">
                        <div class="container-fluid">
                            <div class="row mb-2">
                            </div>
                        </div>
                    </div>
                    <section class="content">
                        <div class="card">
                            <div class="card-header">
                                <h1 class="card-title">Add Permission</h1>
                            </div>
                            <div class="card-body">
                                <form method="post" action=""><br>
                                    <div class="row">


                                        <div class="col-4">
                                            <% if (data) { %>
                                                <% for(var i=0; i < data.length; i++) { %>
                                                    <input type="checkbox" id="any" name="permission_id"
                                                        value="<%= data[i]._id %>" selected>
                                                        <script>
                                                            var any  = "<%= data[i]._id %>"
                                                            
                                                            </script>

                                                    <label for="">
                                                        <%= data[i].permission_name %>
                                                    </label><br>



                                                    <% } %>
                                                        <% } %>

                                                        <div class="col-4">
                                                            <% if (permissiondata) { %>
                                                                <% for(var i=0; i < permissiondata.length; i++) { %>
                                                                    <script>
                                                                        var aman  = "<%= permissiondata[i].permission_id %>"
                                                                        
                                                                        </script>
                                                                    <input type="text" id="" name="permission_id"
                                                                        value="<%= permissiondata[i].permission_id %>">
                                                                    <label for="">
                                                                        <%= permissiondata[i].permission_name %>
                                                                    </label><br>
                
                
                
                                                                    <% } %>
                                                                        <% } %>
                 




                                                            <input type="hidden" class="form-control" name="user_id"
                                                                id="user_id" value="<%= roledata._id%>">
                                                            <input type="hidden" class="form-control" name="role_id"
                                                                id="role_id" value="<%= roledata.role_id%>">

                                        </div>



                                        <div class="col-12 mt-5">
                                            <button type="submit" name="submit" id="submit"
                                                class="btn btn-primary">Submit</button>
                                        </div>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
            <!-- [ Main Content ] end -->
            <%- include ("partials/footer.ejs") %>
                <!-- Apex Chart -->
                <script src="js/plugins/apexcharts.min.js"></script>
                @<%- include ("partials/footer-bottom-link.ejs") %>
                    <!-- custom-chart js -->
                    <script src="js/pages/dashboard-main.js"></script>
                    <script>
                    if(aman==any){
                        $('#any').prop('checked', true);
                         }
                        </script>


</body>

</html>