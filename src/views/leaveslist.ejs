

<!DOCTYPE html>
<html lang="en">
<%- include('partials/header.ejs') %>


    <body>
        <div class="container-scroller">
            <%- include('partials/sidebar.ejs') %>
                <div class="container-fluid page-body-wrapper">
                    <%- include('partials/navbar.ejs') %>
                        <div class="main-panel">
                            <div class="content-wrapper">
                                <div class="row ">
                                    <div class="col-12 grid-margin">
                                        <div class="card">
                                            <div class="card-body">
                                                     <a class="nav-link btn btn-success create-new-button float-right"
                                                                        id="createbuttonDropdown" c href="/addLeaves">+ leaves requaest</a></button>

                                                 <h1 class="card-title">Leaves </h4>
                                               
                                                <div class="table-responsive">
                                                    <table class="table">
                                                        <thead>
                                                            <tr>
                                                                <th>#</th>
                                                                <th>Employee name</th>
                                                                <th>Reason</th>
                                                                <th>Date From</th>
                                                                <th>Date To</th>
                                                                <th>Status</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% if (leavesData) { %>
                                                                <% var i=1; %>
                                                                    <% leavesData.forEach(function(u) { %>
                                                            
                                                                        <tr>
                                                                            <td>
                                                                                <%= (i++) %>
                                                                            </td>
                                                                            <td>
                                                                                <% u.user.forEach(function(r) { %>
                                                                                    <%= r.firstname %>
                                                                                        <% }) %>
                                                                            </td>
                                                                            <td>
                                                                                <%= u.reason %>
                                                                            </td>
                                                                            </td>
                                                                            <% let newDate=new Date(u.datefrom)%>
                                                                                <td>
                                                                                    <%= newDate.toISOString().split('T')[0].split("-").reverse().join("-") %>
                                                                                </td>
                                                                                <% let endDate=new Date(u.dateto) %>
                                                                                    <td>
                                                                                        <%= endDate.toISOString().split('T')[0].split("-").reverse().join("-") %>
                                                                                    </td>
                                                                                    <% if (u.status=="APPROVE" || u.status=="REJECT" ){ %>
                                                                                        <td>
                                                                                            <% if(u.status=="APPROVE" ) { %>
                                                                                                <div class="badge badge-outline-success">Approved</div>
                                                                                                    
                                                                                                </span>
                                                                                                <% } else { %>
                                                                                                    <div class="badge badge-outline-danger">Rejected</div>
                                                                                                     <% } %>
                                                                                                    </span>
                                                                                        </td>
                                                                                        <% }else{ %>
                                                                                            <td>
                                                                                                <a href="/approveLeaves/<%= u._id %>" class=""><i
                                                                                                        class="fa-regular fa-square-check fa-2x text-success "></i></a>
                                                                                                <a href="/rejectLeaves/<%= u._id %>" class=" text-dark ml-3"><i
                                                                                                        class="fa-regular fa-rectangle-xmark fa-2x text-danger   "></i></a>
                                                                                            </td>
                                                                                            <% } %>
                                                            
                                                                        </tr>
                                                                        <% }) %>
                                                                            <% } %>

                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%- include('partials/footer.ejs') %>

    </body>

</html>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });

    function openModal(modal_id) {
        //$('.confirm-delete').addClass('hide');
        $('#myModal_' + modal_id + '.modal-header, .modal-footer, .modal-body').removeClass('hide');
        $('#myModal_' + modal_id).modal('show');
    }



</script>