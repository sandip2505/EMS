
<!DOCTYPE html>
<html lang="en">
<%- include('partials/header.ejs') %>
   

    <body>
        <div class="container-scroller">
            <%- include('partials/sidebar.ejs') %>
                <div class="container-fluid page-body-wrapper">
                    <%- include('partials/navbar.ejs') %>
                        <div class="main-panel">
                            <div class="content-wrapper">
                                <div class="row ">
                                    <div class="col-12 grid-margin">
                                        <div class="card">
                                            <div class="card-body">
                                                <button class="float-lg-right bg-dark"><a class="nav-link btn btn-success create-new-button float-right"
                                                        id="createbuttonDropdown" c href="/addtask">+ Add Task</a></button>
                                                <h4 class="card-title">Task </h4>

                                                <div class="table-responsive">
                                                    <table class="table" id="myTable">
                                                        <thead>
                                                            <tr>
                                                    <th>#</th>
                                                    <th>project name</th>
                                                    <th>user name</th>
                                                    <th>Title</th>
                                                    <th>Description</th>
                                                    <th>Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% if (taskData) { %>
                                                                <% var i=1; %>
                                                                    <% taskData.forEach(function(u) { %>
                                                            
                                                                        <tr>
                                                                            <td>
                                                                                <%= (i++) %>
                                                                            </td>
                                                                            <td>
                                                                                <% u.test.forEach(function(r) { %>
                                                                                    <%= r.title %>
                                                                                        <% }) %>
                                                                            </td>
                                                                            <td>
                                                                                <% u.test1.forEach(function(r) { %>
                                                                                    <%= r.firstname %>
                                                                                        <% }) %>
                                                                            </td>
                                                            
                                                                            <td>
                                                                                <%= u.title %>
                                                                            </td>
                                                                            <td>
                                                                                <%= u.short_description %>
                                                                            </td>
                                                            
                                                                            <td>
                                                            
                                                                                <a href="/editTask/<%= u._id %>" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"
                                                                                        aria-hidden="true"></i></a>
                                                                                <a href="/deleteTask/<%= u._id %>" data-toggle="modal" onclick="return openModal('<%= u.id %>')"
                                                                                    class="btn btn-danger"><i class="fas fa-trash-alt" aria-hidden="true"></i></a>
                                                            
                                                                            </td>
                                                                            <div class="modal" id="myModal_<%= u.id %>">
                                                            
                                                                                <div class="modal-dialog">
                                                                                    <div class="modal-content">
                                                                                        <!-- Modal Header -->
                                                                                        <div class="modal-header">
                                                                                            <h4 class="modal-title">Are you sure
                                                                                                you
                                                                                                want to delete this Role</h4>
                                                                                        </div>
                                                            
                                                                                        <!-- Modal body -->
                                                                                        <!-- Modal footer -->
                                                                                        <div class="modal-footer">
                                                                                            <button type="button" class="btn btn-danger " data-dismiss="modal"><a
                                                                                                    class="Close">No</a></button>
                                                                                            <button class="btn btn-success"><a class="text-white" class="Yes"
                                                                                                    href="/deleteTask/<%= u._id %>">Yes</a>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </tr>
                                                                        <% }) %>
                                                                            <% } %>
                                
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%- include('partials/footer.ejs') %>
                               
    </body>

</html>
<script>

    function openModal(modal_id) {
        //$('.confirm-delete').addClass('hide');
        $('#myModal_' + modal_id + '.modal-header, .modal-footer, .modal-body').removeClass('hide');
        $('#myModal_' + modal_id).modal('show');
    }



</script>