<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href= />
    <%- include ("partials/head.ejs") %>
        

<body class="hold-transition sidebar-mini layout-fixed">
    <%- include ("menu-list.ejs") %>

        <div class="pcoded-main-container">
            <div class="content-wrapper">
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1><span class="ml-2">All tasks</span></h1>
                            </div>
                            <div class="col-sm-6">
                                <a href="/createTask" style="float:right;"><button class="btn btn-dark"><i
                                            class="fas fa-plus"></i></button></a>
                            </div>
                        </div>
                    </div>
                </div>
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">

                                    <div class="card-body">
                                        <table class="table table-bordered table-hover" id="myTable">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>project name</th>
                                                    <th>user name</th>
                                                    <th>Title</th>
                                                    <th>Description</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>

                                            <tbody>

                                                <% if (taskData) { %>
                                                    <% var i=1; %>
                                                        <% taskData.forEach(function(u) { %>

                                                            <tr>
                                                                <td>
                                                                    <%= (i++) %>
                                                                </td>
                                                                <td>
                                                                    <% u.test.forEach(function(r) { %>
                                                                        <%= r.title %>
                                                                            <% }) %>
                                                                </td>
                                                                <td>
                                                                    <% u.test1.forEach(function(r) { %>
                                                                        <%= r.firstname %>
                                                                            <% }) %>
                                                                </td>
                                                              
                                                                <td>
                                                                    <%= u.title %>
                                                                </td>
                                                                <td>
                                                                    <%= u.short_description %>
                                                                </td>

                                                                <td>

                                                                    <a href="/editTask/<%= u._id %>"
                                                                        class="btn btn-lg"><i
                                                                            class="fa-solid fa-pen-to-square"
                                                                            aria-hidden="true"></i></a>
                                                                    <a href="/deleteTask/<%= u._id %>"
                                                                        data-toggle="modal"
                                                                        onclick="return openModal('<%= u.id %>')"
                                                                        class="btn btn-lg"><i class="fas fa-trash-alt"
                                                                            aria-hidden="true"></i></a>

                                                                </td>
                                                                <div class="modal" id="myModal_<%= u.id %>">

                                                                    <div class="modal-dialog">
                                                                        <div class="modal-content">
                                                                            <!-- Modal Header -->
                                                                            <div class="modal-header">
                                                                                <h4 class="modal-title">Are you sure
                                                                                    you
                                                                                    want to delete this Role</h4>
                                                                            </div>

                                                                            <!-- Modal body -->
                                                                            <!-- Modal footer -->
                                                                            <div class="modal-footer">
                                                                                <button type="button"
                                                                                    class="btn btn-danger "
                                                                                    data-dismiss="modal"><a
                                                                                        class="Close">No</a></button>
                                                                                <button class="btn btn-success"><a
                                                                                        class="text-white" class="Yes"
                                                                                        href="/deleteTask/<%= u._id %>">Yes</a>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </tr>
                                                            <% }) %>
                                                                <% } %>
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <%- include ("partials/footer.ejs") %>
            <!-- Apex Chart -->
        
           
                <!-- custom-chart js -->
                
</body>

</html>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });

    function openModal(modal_id) {
        //$('.confirm-delete').addClass('hide');
        $('#myModal_' + modal_id + '.modal-header, .modal-footer, .modal-body').removeClass('hide');
        $('#myModal_' + modal_id).modal('show');
    }



</script>